<?xml version="1.0" encoding="utf-8"?>
<com.hannahxian.baselibrary.View.SquareFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center">
    <com.hannahxian.baselibrary.View.SquareImageView
        android:id="@+id/adapter_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/camera"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/adapter_img"
        android:gravity="center"
        android:layout_alignStart="@+id/adapter_img"
        android:layout_alignEnd="@+id/adapter_img"
        android:text="拍摄照片"/>
</com.hannahxian.baselibrary.View.SquareFrameLayout>